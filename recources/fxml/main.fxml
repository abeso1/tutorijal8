<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<TabPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
   <tabs>
      <Tab text="Vozaci">
         <content>
            <GridPane alignment="center" hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints />
                    <ColumnConstraints />
                    <ColumnConstraints />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>
                <children>
                    <Label text="Izaberite vozača:" />
                    <ChoiceBox fx:id="izborVozaca" onAction="#izabraniVozac" prefWidth="150.0" GridPane.columnIndex="1" />
                    <GridPane GridPane.columnSpan="2" GridPane.rowIndex="1">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints />
                        </rowConstraints>
                        <children>
                            <Label text="Ime:" />
                            <TextField fx:id="imeVozac" GridPane.columnIndex="1" />
                            <Label text="Jmb: " GridPane.rowIndex="2" />
                            <TextField fx:id="vozacJmb" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                            <Button onAction="#ispisiVozace" text="Ispiši" GridPane.rowIndex="3" />
                        <Label text="Prezime:" GridPane.rowIndex="1" />
                        <TextField fx:id="prezimeVozac" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        </children>
                    </GridPane>
                </children>
            </GridPane>
         </content>
      </Tab>
       <Tab text="Busevi">
           <content>
               <GridPane alignment="center" hgap="10" vgap="10">
                   <columnConstraints>
                       <ColumnConstraints />
                       <ColumnConstraints />
                       <ColumnConstraints />
                   </columnConstraints>
                   <rowConstraints>
                       <RowConstraints />
                       <RowConstraints />
                       <RowConstraints />
                   </rowConstraints>
                   <children>
                       <Label text="Izaberite bus:" />
                       <ChoiceBox fx:id="izborBusa" onAction="#izabraniBus" prefWidth="150.0" GridPane.columnIndex="1" />
                       <GridPane GridPane.columnSpan="2" GridPane.rowIndex="1">
                           <columnConstraints>
                               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                           </columnConstraints>
                           <rowConstraints>
                               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                               <RowConstraints />
                           </rowConstraints>
                           <children>
                               <Label text="Naziv:" />
                               <TextField fx:id="busNaziv" GridPane.columnIndex="1" />
                               <Label text="Serija: " GridPane.rowIndex="2" />
                               <TextField fx:id="busSeries" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                               <Button onAction="#ispisiBuseve" text="Ispiši" GridPane.rowIndex="3" />
                               <Label text="Broj sjedećih mjesta:" GridPane.rowIndex="1" />
                               <TextField fx:id="busMjesta" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                           </children>
                       </GridPane>
                   </children>
               </GridPane>
           </content>
       </Tab>
   </tabs>
</TabPane>
